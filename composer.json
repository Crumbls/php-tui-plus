{
    "name": "crumbls/php-tui-plus",
    "description": "Comprehensive TUI library heavily influenced by Ratatui",
    "keywords": ["tui","console","terminal","cli"],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Crumbls\\Tui\\": "src/",
            "Crumbls\\BDF\\": "lib/bdf/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Crumbls\\Tui\\Tests\\": "tests/",
            "Crumbls\\Tui\\Example\\Demo\\": "example/demo/src",
            "Crumbls\\Docgen\\": "lib/docgen/src/",
            "Crumbls\\Term\\": "lib/term/src",
            "Crumbls\\Bdf\\Tests\\": "lib/bdf/tests/"
        }
    },
    "authors": [
      {
        "name": "Chase C. Miller",
        "email": "chase@crumbls.com"
      }
    ],
    "require": {
        "php": "^8.1",
        "php-tui/cassowary": "^0.1.0",
        "php-tui/term": "^0.3.2",
        "react/event-loop": "^1.5",
        "react/stream": "^1.4"
    },
    "suggest": {
        "illuminate/console": "Required for Laravel TUI commands (^10.0|^11.0)"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.34",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.4",
        "symfony/var-dumper": "^6.3",
        "roave/better-reflection": "^6.15",
        "phpstan/phpdoc-parser": "^1.24",
        "phpbench/phpbench": "^1.2",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpstan/phpstan-phpunit": "^1.0",
        "rector/rector": "^1.0",
        "pestphp/pest": "^2.36"
    },
    "scripts": {
        "phpstan": "./vendor/bin/phpstan --memory-limit=1G",
        "php-cs-fixer": "./vendor/bin/php-cs-fixer fix",
        "test": "./vendor/bin/pest",
        "docs": "php ./scripts/docgen",
        "phpbench": "php ./vendor/bin/phpbench run --revs=1 --iterations=1",
        "rector": "./vendor/bin/rector process",
        "vhs": "vhs example/demo/demo.tape",
        "demo": "example/demo/bin/demo",
        "integrate": [
            "@phpstan",
            "@php-cs-fixer",
            "@test",
            "@rector",
            "@phpbench",
            "@docs",
            "@vhs"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Crumbls\\Tui\\Laravel\\TuiServiceProvider"
            ]
        }
    }
}
